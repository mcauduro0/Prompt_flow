{
  "name": "arc-investment-factory",
  "version": "1.0.0",
  "private": true,
  "description": "Novelty-first global equities idea generation and deep fundamental research system with persistent memory",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:migrate": "pnpm --filter @arc/database migrate",
    "db:seed": "pnpm --filter @arc/database seed",
    "worker:dev": "pnpm --filter @arc/worker dev",
    "api:dev": "pnpm --filter @arc/api dev",
    "web:dev": "pnpm --filter @arc/web dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "dotenv": "^16.4.0"
  }
}
