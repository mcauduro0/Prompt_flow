# ARC Investment Factory - Environment Variables
# Copy this file to .env.local and fill in your values

# Database (Postgres/Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/arc_investment_factory
DIRECT_URL=postgresql://user:password@localhost:5432/arc_investment_factory

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=docs_global

# Object Storage (S3/Supabase Storage)
S3_BUCKET=arc-investment-factory
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key

# LLM Provider (OpenAI)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# LLM Tracing (Langfuse)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn

# Redis (for job queues)
REDIS_URL=redis://localhost:6379

# Application
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000

# Operating Parameters (from Build Pack)
LANE_A_DAILY_TARGET=120
LANE_A_DAILY_CAP=200
LANE_B_DAILY_PROMOTIONS=3
LANE_B_WEEKLY_CAP=10
LANE_B_MAX_CONCURRENCY=3
