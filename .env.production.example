# =============================================================================
# ARC Investment Factory - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production
VERSION=latest
TZ=America/Sao_Paulo

# -----------------------------------------------------------------------------
# Domain & URLs
# -----------------------------------------------------------------------------
DOMAIN_NAME=arc-investment.com
NEXT_PUBLIC_API_URL=https://api.arc-investment.com
CORS_ORIGIN=https://arc-investment.com,https://www.arc-investment.com

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
# For self-hosted PostgreSQL (docker-compose)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=arc
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=arc_investment

# Full connection URL (auto-generated from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# For Digital Ocean Managed Database (uncomment and use instead)
# DATABASE_URL=postgresql://arc:PASSWORD@private-arc-db-do-user-xxxxx.db.ondigitalocean.com:25060/arc_investment?sslmode=require

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# For Digital Ocean Managed Redis (uncomment and use instead)
# REDIS_URL=rediss://default:PASSWORD@private-arc-redis-do-user-xxxxx.db.ondigitalocean.com:25061

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARS
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# LLM API Keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# -----------------------------------------------------------------------------
# Data Provider API Keys
# -----------------------------------------------------------------------------
FMP_API_KEY=your-financial-modeling-prep-api-key
POLYGON_API_KEY=your-polygon-api-key
FRED_API_KEY=your-fred-api-key

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
WORKER_CONCURRENCY=3
LANE_A_ENABLED=true
LANE_B_ENABLED=true

# -----------------------------------------------------------------------------
# Notifications (Optional)
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Email (for notifications)
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@arc-investment.com
EMAIL_TO=admin@arc-investment.com

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# -----------------------------------------------------------------------------
# Docker Registry (for CI/CD)
# -----------------------------------------------------------------------------
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=your-github-username/arc

# -----------------------------------------------------------------------------
# Digital Ocean (for Terraform)
# -----------------------------------------------------------------------------
# DO_TOKEN=dop_v1_your_token_here
# DO_SPACES_ACCESS_KEY=your-spaces-access-key
# DO_SPACES_SECRET_KEY=your-spaces-secret-key
